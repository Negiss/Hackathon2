<section class="article">
    <div class="container mx-auto">
        <div class="mt-3">
            <h1>{{ article.titre }}</h1>
            <p>{{ article.contenu }}</p>
            <img src="" alt="Article's image">
            <p>-<span class="italic"> Créé le {{ article.date | date('d/m/Y') }} par <span class="bold">{{ article.auteur.name }}</span></span> à {{ article.localisation }} </p>
        </div>
    </div>
</section>

<section class="comments">
    <div class="container mx-auto mt-5">
        <div class="mt-3">
            <h1>Comments</h1>
            {{ form_row(form.message) }}
            {{ form_row(form.save) }}
            <div class="mt-3">
                {% for comment in comments %}
                    {% if comment.articles.id == article.id %}
                        <p><span class="italic"> {{ comment.timestamp | date('m/d/y') }} at {{ comment.timestamp | date('H:i') }}</span> - User : {{ comment.message }}</p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>